{% extends 'base.html.twig' %}

{% block title %}{% trans %} Connexion {% endtrans %}{% endblock %}

{% block body %}

	{% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
	

	<div class="container-fluid py-5">
        <div class="container py-5">
            <div class="bg-appointment rounded">
                <div class="row h-100 align-items-center justify-content-center">
                    <div class="col-lg-6 py-5">
                        <div class="rounded p-5 my-5" style="background: rgba(55, 55, 63, .7);">
                            <h1 class="text-center text-white mb-4">{% trans %} Connexion {% endtrans %}</h1>
                            <form action="{{ path('app_login') }}" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control border-0 p-4" placeholder="{% trans %} Nom d'utilisateur {% endtrans %}" required="required" id="username" name="_username" value="{{ last_username }}" />
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control border-0 p-4" placeholder="{% trans %} Mot de passe {% endtrans %}" required="required" id="password" name="_password" />
                                </div>
								<input type="hidden" name="_target_path" value="/home">
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div>
                                    <button class="btn btn-primary btn-block border-0 py-3" type="submit">{% trans %} Se connecter {% endtrans %}</button>
                                </div>
								<div class="form-row">
                                	<div style="color:white;">
                                      	{% trans %}Cliquez {% endtrans %}<a href="{{ path('app_register') }}"> ici </a> {% trans %} pour cr√©er votre compte.{% endtrans %}
									</div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
